@model CattleCompanion.Core.ViewModels.CowFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Cow</h2>

@using (Html.BeginForm("Create", "Cattle"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.GivenId)
        @Html.TextBoxFor(m => m.GivenId, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.GivenId)
    </div>
    <label class="d-block">Gender</label>
    <div class="form-check form-check-inline">
        <input class="form-check-input" data-val="true" data-val-length-max="1" data-val-required="The Gender field is required." id="Male" name="Gender" type="radio" value="M">
        <label for="Male" class="form-check-label">M</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" data-val="true" data-val-length-max="1" data-val-required="The Gender field is required." id="Female" name="Gender" type="radio" value="F">
        <label for="Female" class="form-check-label">F</label>
        @Html.ValidationMessageFor(m => m.Gender)
    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(m => m.FarmId)
        @Html.DropDownListFor(m => m.FarmId, new SelectList(Model.Farms, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FarmId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthday)
        @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", autofocus = "autofocus", type = "date" })
        @Html.ValidationMessageFor(m => m.Birthday)
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Save</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}