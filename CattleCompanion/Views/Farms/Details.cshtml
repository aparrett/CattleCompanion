@using CattleCompanion.Core.Models
@model CattleCompanion.Core.Models.Farm
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-5">@Model.Name</h2>
<table class="table mt-4">
    <thead>
        <tr>
            <th scope="col">Name or Id</th>
            <th scope="col">Gender</th>
            <th scope="col">Birthday</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cow cow in Model.Cattle)
        {
            <tr>
                <td>@cow.GivenId</td>
                <td>@cow.Gender</td>
                <td>@cow.Birthday.ToString("d")</td>
            </tr>
        }
    </tbody>
</table>
    
<a href="/Cattle/Create?farmId=@Model.Id" class="btn btn-primary btn-sm">Add a Cow</a>

